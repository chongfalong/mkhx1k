extends layout
block append scripts
    script(src='/my.js')
    script.
        $(document).ready(function(){ 
            $(document).ajaxSend(function(){
                $('button').attr('disabled',true);
                });
            $(document).ajaxComplete(function(){
                $('button').attr('disabled',false);
                });
            for(var i=2;i<9;i++){
               mazeShow(i);
            }
            userInfo();
        });
block content
    //div#navfirst
    //div#navsecond
    div#sidebar
        a#logout(href='/logout')
            span 退出
        div#userinfo
            h2#username username
            h3#nickname nickname
            ul
                li 等级:
                    span#level level
                li 金币:
                    span#coins coins
                li 晶钻:
                    span#cash cash
                li 体力:
                    span#energy energy
    div#maincontent
        div
            table#mazes
                tr
                    th 迷宫
                    th 名称
                    th 是否通关
                    th 免费重置
                    th 重置花费
                    th 一键
                    th 操作
                - for(var i=2;i<9;i++)
                    tr
                        td #{i}塔
                        td
                            label(id = "lblMazeName#{ i }") 名称
                        td
                            label(id = "lblMazeIsCleared#{ i }") 否
                        td
                            label(id = "lblMazeFreeReset#{ i }") 0
                        td
                            label(id = "lblMazeResetCash#{ i }") 0
                        td
                            a(href='javascript:syncMazeBattleAll(#{ i });')
                                span 全刷
                            a(href='javascript:syncMazeBattleBox(#{ i });')
                                span 宝箱
                        td
                            a(href='javascript:mazeReset(#{ i });')
                                span 重置
                            a(href='javascript:mazeInfos(#{ i });')
                                span 详情
    div#console
        div#consoleTitle
            h3#consoleTitle 控制台日志
        div#consoleLog
            div#logContent
